set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:FantasqueSansMono Nerd Font 11

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec $TERMINAL

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run
# A more modern dmenu replacement is rofi:
# bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+s split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+m fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+n layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+f floating toggle

# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1 move workspace to output DisplayPort-0
bindsym $mod+2 workspace number $ws2 move workspace to output DisplayPort-0
bindsym $mod+3 workspace number $ws3 move workspace to output DisplayPort-0
bindsym $mod+4 workspace number $ws4 move workspace to output DisplayPort-0
bindsym $mod+5 workspace number $ws5 move workspace to output DisplayPort-0
bindsym $mod+6 workspace number $ws6 move workspace to output DisplayPort-1
bindsym $mod+Ctrl+1 workspace number $ws6 move workspace to output DisplayPort-1
bindsym $mod+7 workspace number $ws7 move workspace to output DisplayPort-1
bindsym $mod+Ctrl+2 workspace number $ws7 move workspace to output DisplayPort-1
bindsym $mod+8 workspace number $ws8 move workspace to output DisplayPort-1
bindsym $mod+Ctrl+3 workspace number $ws8 move workspace to output DisplayPort-1
bindsym $mod+9 workspace number $ws9 move workspace to output DisplayPort-1
bindsym $mod+Ctrl+4 workspace number $ws9 move workspace to output DisplayPort-1
bindsym $mod+0 workspace number $ws10 move workspace to output DisplayPort-1
bindsym $mod+Ctrl+5 workspace number $ws10 move workspace to output DisplayPort-1

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1 workspace number $ws1 move workspace to output DisplayPort-0
bindsym $mod+Shift+2 move container to workspace number $ws2 workspace number $ws2 move workspace to output DisplayPort-0
bindsym $mod+Shift+3 move container to workspace number $ws3 workspace number $ws3 move workspace to output DisplayPort-0
bindsym $mod+Shift+4 move container to workspace number $ws4 workspace number $ws4 move workspace to output DisplayPort-0
bindsym $mod+Shift+5 move container to workspace number $ws5 workspace number $ws5 move workspace to output DisplayPort-0
bindsym $mod+Shift+6 move container to workspace number $ws6 workspace number $ws6 move workspace to output DisplayPort-1
bindsym $mod+Shift+7 move container to workspace number $ws7 workspace number $ws7 move workspace to output DisplayPort-1
bindsym $mod+Shift+8 move container to workspace number $ws8 workspace number $ws8 move workspace to output DisplayPort-1
bindsym $mod+Shift+9 move container to workspace number $ws9 workspace number $ws9 move workspace to output DisplayPort-1
bindsym $mod+Shift+0 move container to workspace number $ws10 workspace number $ws10 move workspace to output DisplayPort-1

# reload the configuration file
bindsym $mod+ctrl+F2 reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+ctrl+F1 restart
# exit i3 (logs you out of your X session)
bindsym $mod+ctrl+F3 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Window Colors
set $bgcolor    #81A1C1
set $ibgcolor   #282828
set $textcolor  #ffffff
set $itextcolor #969696
set $ubgcolor   #BF616A

# i3blocks
bar {
        output DisplayPort-0
        status_command i3blocks -c /home/david/.config/i3/i3blocks.conf
        tray_output none
        height 22
        colors {
            background  $ibgcolor
            #                       border      background      text
            focused_workspace       $bgcolor    $bgcolor        $ibgcolor
            inactive_workspace      $ibgcolor    $ibgcolor       $textcolor
            urgent_workspace        $ubgcolor   $ubgcolor       $textcolor
        }
}

bar {
        output DisplayPort-1
        status_command i3blocks -c /home/david/.config/i3/i3blocks2.conf
        tray_output none
        height 22
        colors {
            background  $ibgcolor
            #                       border      background      text
            focused_workspace       $bgcolor    $bgcolor        $ibgcolor
            inactive_workspace      $ibgcolor    $ibgcolor       $textcolor
            urgent_workspace        $ubgcolor   $ubgcolor       $textcolor
        }

}

## --- Gaps And Borders --- #

for_window [class=".*"] border pixel 2

#                           background      border          text                indicator
client.focused              $ibgcolor       $bgcolor       $textcolor          $bgcolor
client.unfocused            $ibgcolor       $ibgcolor       $itextcolor         $ibgcolor
client.focused_inactive     $ibgcolor       $ibgcolor       $itextcolor         $ibgcolor
client.urgent               $ubgcolor       $ubgcolor       $textcolor          $bgcolor

gaps inner 10
gaps outer 0

#smart_gaps on
#smart_borders on

# --- Window Rules --- #

## Assign to workspace

# Librewolf
for_window [class="LibreWolf"] move to workspace $ws2

# Firefox
for_window [class="firefox"] move to workspace $ws2

# Brave
for_window [class="Brave-browser"] move to workspace $ws2


## Make always floating

# Browser pop-ups
for_window [window_role="pop-up"] floating enable

# PacketTracer
for_window [class="PacketTracer"] floating enable

# Pcmanfm file progress
for_window [class="Pcmanfm" instance="file_progress"] floating enable

# Gpick
for_window [class="Gpick"] floating enable

# Lxappearance
for_window [class="Lxappearance"] floating enable

# Pavucontrol
for_window [class="Pavucontrol"] floating enable

# --- Keymaps --- #

## Resize Windows
bindsym $mod+Ctrl+h resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+j resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 10 ppt

## Hot Keys

# Sound
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ && pkill -SIGRTMIN+2 i3blocks
bindsym XF86AudioLowerVolume exec amixer set Master 5%- && pkill -SIGRTMIN+2 i3blocks
bindsym XF86AudioMute exec amixer -D default set Master 1+ toggle && pkill -SIGRTMIN+2 i3blocks

# Music
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPlay exec playerctl play-pause

# Print Key
bindsym Print exec flameshot full -p ~/Pictures && notify-send -u normal 'Print Screen Taken' '' --icon='~/.config/dunst/icons/print.png'
bindsym $mod+Print exec flameshot gui


## Utils

# Rofi
bindsym Mod1+space exec rofi -show drun

# Clipmenu
bindsym $mod+Shift+space exec clipmenu

# Mount Drive
bindsym $mod+Ctrl+space exec mount_drive

# Unmount Drive
bindsym $mod+Ctrl+Shift+space exec unmount_drive

# Picom toogle
bindsym $mod+g exec picom-toggle

# Switch keyboard Layout
bindsym $mod+space exec layout && pkill -SIGRTMIN+1 i3blocks


## Power Menu

# Shutdown
bindsym $mod+Ctrl+F5 exec shutdown now

# Reboot
bindsym $mod+Ctrl+F6 exec reboot

# Suspend
bindsym $mod+Ctrl+F7 exec systemctl suspend

# Hibernate
bindsym $mod+Ctrl+F8 exec systemctl hibernate


## Apps

# i3lock
bindsym $mod+x exec i3lock

# LibreWolf
bindsym $mod+Mod1+w exec librewolf

# Pcmanfm
bindsym $mod+Mod1+f exec pcmanfm

# Lf
bindsym $mod+Shift+Return exec $TERMINAL -e lf

# Pavucontrol
bindsym $mod+Mod1+s exec pavucontrol

# Telegram
bindsym $mod+Mod1+t exec telegram-desktop

# Keepassxc
bindsym $mod+Mod1+k exec keepassxc

# Gpick
bindsym $mod+Mod1+p exec gpick


